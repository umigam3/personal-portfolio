---
// Components
import ExperienceCard from '@components/ExperienceCard.astro';
import SkillPill from '@UI/SkillPill.astro';

// Icons
import PhpIcon from '@icons/tech/PHPIcon.astro';
import AngularIcon from '@icons/tech/AngularIcon.astro';
import TypeScriptIcon from '@icons/tech/TypeScriptIcon.astro';
import JavaScriptIcon from '@icons/tech/JavaScriptIcon.astro';
import HtmlIcon from '@icons/tech/HTMLIcon.astro';
import CssIcon from '@icons/tech/CSSIcon.astro';
import WordPressIcon from '@icons/tech/WordPressIcon.astro';
import SqlIcon from '@icons/tech/SQLIcon.astro';
import GitIcon from '@icons/tech/GitIcon.astro';
import LaravelIcon from '@icons/tech/LaravelIcon.astro';
import LivewireIcon from '@icons/tech/LivewireIcon.astro';
import AlpineIcon from '@icons/tech/AlpineIcon.astro';
import TailwindIcon from '@icons/tech/TailwindIcon.astro';
import BootstrapIcon from '@icons/tech/BootstrapIcon.astro';
---


<section id="experience" class="mb-20 max-w-6xl mx-auto w-full">
    <h2 class="text-gray-200 font-medium text-2xl text-left md:text-center mb-8 tracking-[.5rem]">EXPERIENCE</h2>    
    <div class="relative h-full">
        <div class="absolute ml-2 md:ml-0 left-0 top-4 md:left-1/2 w-[2px] bg-secondary transform -translate-x-1/2 h-full"></div>
        <ExperienceCard 
            date="Oct 2024 - Present"
            position="Backend Developer"
            company="eAgora"
            description="Working with a development team to enhance the main platform, including integrating and refining APIs and endpoints, while also managing a dashboard that allows for a variety of actions."
            side="left"> 
            <div class="flex flex-wrap justify-start md:justify-end">
                <SkillPill color='bg-red-500/30' skill="Laravel">
                    <LaravelIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-indigo-500/30' skill="PHP">
                    <PhpIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-pink-500/30' skill="Livewire" >
                    <LivewireIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-cyan-500/30' skill="AlpineJS" >
                    <AlpineIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-yellow-500/30' skill="JavaScript" >
                    <JavaScriptIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-orange-500/30' skill="HTML" >
                    <HtmlIcon class="w-3 h-4"/>
                </SkillPill>
                <SkillPill color='bg-sky-500/30' skill="Tailwind">
                    <TailwindIcon class="w-3 h-4"></Css>
                </SkillPill>
                <SkillPill color='bg-slate-500/30' skill="MySQL" >
                    <SqlIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-amber-500/30' skill="Git" >
                    <GitIcon class="w-4 h-4"/>
                </SkillPill>
            </div>
        </ExperienceCard>
        <ExperienceCard 
            date="Jan 2023 - Oct 2024"
            position="Web Developer"
            company="3&Punt"
            description="Developing quality Moodle plugins and integrations. Utilizing technologies to enhance the Moodle e-learning experience. Collaborating with clients, I analyze requirements to craft optimal solutions and ensure smooth integration."
            side="right"> 
            <div class="flex flex-wrap justify-start">
                <SkillPill color='bg-indigo-500/30' skill="PHP">
                    <PhpIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-yellow-500/30' skill="JavaScript" >
                    <JavaScriptIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-orange-500/30' skill="HTML" >
                    <HtmlIcon class="w-3 h-4"/>
                </SkillPill>
                <SkillPill color='bg-indigo-500/30' skill="Bootstrap">
                    <BootstrapIcon class="w-3 h-4"/>
                </SkillPill>
                <SkillPill color='bg-slate-500/30' skill="MySQL" >
                    <SqlIcon class="w-4 h-4"/>
                </SkillPill>
                <SkillPill color='bg-amber-500/30' skill="Git" >
                    <GitIcon class="w-4 h-4"/>
                </SkillPill>
            </div>
        </ExperienceCard>
        <ExperienceCard 
            date="Apr 2022 - Sep 2022"
            position="Full Stack Developer"
            company="Namastech"
            description="Fixing general bugs of their web application. (4DMOVIN) Development of small tools to imporve web utility. Building WordPress sites, including landing pages, working with woo-commerce."
            side="left">
            <div class="flex flex-wrap justify-start md:justify-end">
                <SkillPill color='bg-indigo-500/30' skill="PHP">
                    <PhpIcon class="w-4 h-4" />
                </SkillPill>
                <SkillPill color='bg-red-500/30' skill="Angular" >
                    <AngularIcon class="w-5 h-5" />
                </SkillPill>
                <SkillPill color='bg-blue-500/30' skill="TypeScript" >
                    <TypeScriptIcon class="w-4 h-4" />
                </SkillPill>
                <SkillPill color='bg-orange-500/30' skill="HTML" >
                    <HtmlIcon class="w-3 h-4" />
                </SkillPill>
                <SkillPill color='bg-sky-500/30' skill="CSS">
                    <CssIcon class="w-3 h-4" />
                </SkillPill>
                <SkillPill color='bg-cyan-500/30' skill="WordPress" >
                    <WordPressIcon class="w-4 h-4" />
                </SkillPill>
                <SkillPill color='bg-slate-500/30' skill="MySQL" >
                    <SqlIcon class="w-4 h-4" />
                </SkillPill>					
            </div>
        </ExperienceCard>
    </div>
</section>
