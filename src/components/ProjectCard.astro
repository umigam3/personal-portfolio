---
interface Props {
    title: string,
    source: string,
    description: string,
}

const { title, source, description } = Astro.props;
---

<div class="flex flex-col lg:flex-row mb-8 w-100 bg-black/20 rounded-lg">
    <div class="w-full lg:w-[40%] overflow-hidden rounded-lg">
        <img class="w-full aspect-video object-contain hover:animate-zoomIn " loading="lazy" src={source} alt={title}>
    </div>
    <div class="flex flex-col justify-between w-full lg:w-[60%] px-6 py-4">
        <div class="flex flex-col">
            <h2 class="opacity-85 text-2xl font-semibold mb-3">{title}</h2>
            <slot name="skills"/>	
            <p class="text-base mb-4 text-gray-400 dark:text-gray-400">{description}</p>
        </div>
        <slot name="buttons"/>	    
    </div>
</div>